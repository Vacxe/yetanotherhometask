<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.vacxe.yetanotherhometask">

    <application
        android:name=".app.App"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.YetAnotherHomeTask">
        <activity
            android:name=".view.list.MovieListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.YetAnotherHomeTask.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.details.MovieDetailsActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>